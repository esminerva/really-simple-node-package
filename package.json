{
  "name": "really-simple-node-package",
  "version": "1.0.0",
  "description": "A really simple node package for devOps testing.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "test": "nyc mocha",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joyychang/really-simple-node-package.git"
  },
  "author": "Joy Chang",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/joyychang/really-simple-node-package/issues"
  },
  "homepage": "https://github.com/joyychang/really-simple-node-package#readme",
  "files": [
    "index.js"
  ],
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.2",
    "eslint": "^5.5.0",
    "mocha": "^5.2.0",
    "nyc": "^13.0.1"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 6
    },
    "extends": "eslint:recommended",
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "no-var": "error",
      "prefer-const": "error",
      "prefer-arrow-callback": "error"
    }
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "exclude": [
      "test"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ]
  }
}
